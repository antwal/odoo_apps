<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!--
	    Product Template
	    -->
	    <record id="sale_brand_product_tmpl_form_view" model="ir.ui.view">
			<field name="name">sale.brand.product.tmpl.form.view</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='default_code']" position="after">
				    <field name="sale_brand_id"></field>
				</xpath>

			</field>
		</record>

    	<!--
        BRAND
         -->
        <record id="sale_brand_tree_view" model="ir.ui.view">
            <field name="name">sale.brand.tree.view</field>
            <field name="model">sale.brand</field>
            <field name="arch" type="xml">

                <tree string="Brands" version="7.0">
                    <field name="active"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_brand_kanban_view" model="ir.ui.view">
            <field name="name">sale.brand.kanban.view</field>
            <field name="model">sale.brand</field>
            <field name="arch" type="xml">
            	<kanban>
            		<field name="image_small"/>
            		<field name="name"/>
            		<templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open"><img t-att-src="kanban_image('sale.brand', 'image_small', record.id.value)" class="oe_kanban_image"/></a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                             <field name="name"/>
                                        </a>
                                    </h4>

                                </div>
                            </div>
                        </t>
                    </templates>
            	</kanban>
            </field>
        </record>

        <record id="sale_brand_form_view" model="ir.ui.view">
            <field name="name">sale.brand.form.view</field>
            <field name="model">sale.brand</field>
            <field name="arch" type="xml">
            	<form string="Brand">
	            	<sheet>
	            		<field name="id" invisible="True"/>
	                    <div class="oe_left" style="width: 500px;">
	                        <field name="image_medium" widget="image" class="oe_avatar oe_left"/>
	                        <div class="oe_title" style="width: 390px;">
	                            <label class="oe_edit_only" for="name" string="Product Name"/>
	                            <h1><field name="name" class="oe_inline"/></h1>
	                        </div>

	                    </div>
	                    <newline/>
	                    <group>
	                    	<field name="description"/>
	                    	<field name="active"/>
	                    </group>
	            	</sheet>
                </form>
            </field>
        </record>

        <record id="sale_brand_action" model="ir.actions.act_window">
			<field name="name">Brands</field>
			<field name="type">ir.actions.act_window</field>
	        <field name="res_model">sale.brand</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form,kanban</field>
	        <field name="view_id" ref="sale_brand_tree_view"/>
	        <field name="help"></field>
    	</record>

    	<menuitem action="sale_brand_action" id="menu_sale_brand" parent="base.menu_product" sequence="100"/>

    </data>
</openerp>
