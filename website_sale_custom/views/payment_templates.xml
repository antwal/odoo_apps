<openerp>
    <data>
        <template id="payment" inherit_id="website_sale.payment">

        	<!-- Change payment to order confirm -->
        	<xpath expr="//div[@id='payment_method']" position="replace">
        		<div class="col-lg-8 col-sm-8">
	              <form target="_self" action="/shop/confirmation" method="post" class="pull-right">
	                  <a style="width:300px;" class="btn btn-primary a-submit">
	                    <span>Confirm order<span class="fa fa-long-arrow-right"></span></span>
	                  </a>
	              </form>
	            </div>
        	</xpath>
        </template>
    </data>
</openerp>
